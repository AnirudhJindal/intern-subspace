{
  "$schema": "https://schema.tauri.app/config/1",
  "build": {
     "beforeDevCommand": "npm run dev:vite",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "subspace-intern",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "window": {
        "all": false,
        "startDragging": true
      },
      "shell": {
        "all": false,
        "open": true
      }
    },
    "windows": [
      {
        "title": "Subspace Intern",
        "width": 320,
        "height": 90,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "resizable": false,
         "x": 600,
         "y": 720,
        "skipTaskbar": true
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.tauri-app.subspace-intern",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}